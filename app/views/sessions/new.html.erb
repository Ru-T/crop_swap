<div class="container">

  <h1>Login</h1>

    <%=form_tag(session_create_path) do%>
      <p><%=label_tag :email %>
      <%=email_field_tag :email %></p>

      <p><%=label_tag :password %>
      <%=password_field_tag :password%></p>

      <%=submit_tag "Log In" %>
    <% end %>

  <%= link_to 'Sign Up', new_user_path %>

</div>
